{
  "name": "tpl-node-api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:ui": "npm run -C frontend dev",
    "start": "node dist/index.js",
    "build": "npm run openapi && tsup",
    "db:migrate": "prisma migrate dev --name update",
    "db:update": "prisma db push",
    "db:generate": "prisma generate",
    "openapi": "tsx scripts/generateRoutesInfo.ts"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/routes/**/*.ts"
    ],
    "clean": true,
    "format": [
      "esm"
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "treeshake": true
  },
  "dependencies": {
    "@0x-jerry/utils": "^4.2.1",
    "@hono/node-server": "^1.13.7",
    "@hono/swagger-ui": "^0.5.0",
    "@prisma/client": "6.4.1",
    "ajv": "^8.17.1",
    "bcrypt": "^5.1.1",
    "croner": "^9.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "hono": "^4.6.16",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.5",
    "openapi-ts-define": "^0.7.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}